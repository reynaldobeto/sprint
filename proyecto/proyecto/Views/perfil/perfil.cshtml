@model proyecto.Models.PerfilModels

@{
    ViewBag.Title = "Registrar Informacion de Usuario";
}
<h2 id="ps">Registrar Informacion de Usuario </h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<form enctype="multipart/form-data" method="post" action="@Url.Action("perfil")">
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset id="registrarr1">
            <legend id="hhh">Registrar Datos aqui</legend>

            <div class="editor-label">  
                @Html.LabelFor(m => m.nombre)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.nombre)
                @Html.ValidationMessageFor(m => m.nombre)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.apellido)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.apellido)
                @Html.ValidationMessageFor(m => m.apellido)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.pais)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.pais)
                @Html.ValidationMessageFor(m => m.pais)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.intereses)
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(m => m.intereses)
                @Html.ValidationMessageFor(m => m.intereses)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.sexo)
            </div>
             <div class="editor-field">
                @Html.DropDownListFor(m => m.sexo,new[]{new SelectListItem{Value="Masculino",Text="masculino"},
                                                        new SelectListItem{Value="Femenino",Text="femenino"}},"Seleccionar opcion")
                @Html.ValidationMessageFor(m => m.sexo)
            </div>
             <div class="editor-label">
                @Html.LabelFor(m => m.avatar)
            </div>

             <div class="editor-field">
             <input type="file" name="avatar"/>

            </div>
            <p>
                <input type="submit" value="Register" />
            </p>
            

        </fieldset>
    </div>
</form>






